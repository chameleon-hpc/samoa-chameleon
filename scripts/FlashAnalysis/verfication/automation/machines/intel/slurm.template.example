#!/bin/bash
#SBATCH -o ~/samoa/output/jobs/%j.JOBNAME.out
#SBATCH -e ~/samoa/output/jobs/%j.JOBNAME.err
#SBATCH -D ~/samoa
#SBATCH -J JOBNAME
#SBATCH --mail-user=user@example.com
#SBATCH --mail-type=ALL
#SBATCH --clusters=mpp2
#SBATCH --get-user-env
#SBATCH --ntasks=RANKS
#SBATCH --cpus-per-task=NTHREADS
#SBATCH --time=TIME

module load slurm_setup

export LC_NUMERIC='en_US.UTF-8'
export OMP_NUM_THREADS=NTHREADS

outp="$SCRATCH/samoa/JOBNAME"
rm -rf $outp
mkdir -p $outp

mpiexec -n RANKS bin/samoa_flash_intel_SCENARIO_LIMITER PARAMS -xdmfoutput -output_dir $outp